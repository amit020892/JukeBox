<UserControl x:Class="JukeBoxSolutions.Controls.PopupNotifications"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JukeBoxSolutions.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
    
        <Rectangle VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Fill="#3F000000" RadiusX="40" RadiusY="40"/>
        <Label x:Name="templateLabel" Content="Updating from iTunes..." HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF00C5FF" Padding="20" Visibility="Collapsed"/>

        <StackPanel x:Name="stackNotifications" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        </StackPanel>

    </Grid>
</UserControl>
