<Page x:Class="JukeBoxSolutions.Pages.AdminSQL"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JukeBoxSolutions.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminSQL">

    <Grid>
        <DataGrid x:Name="dataResults" HorizontalAlignment="Left" Height="325" Margin="10,115,0,0" VerticalAlignment="Top" Width="780"/>
        <RichTextBox x:Name="txtQuery" Height="100" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="600">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="20,90,0,0" VerticalAlignment="Top" Width="75" Click="btnSubmit_Click"/>

    </Grid>
</Page>
