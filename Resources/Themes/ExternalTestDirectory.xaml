<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="ControlGradientMain" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FF854588" Offset="0"/>
        <GradientStop Color="#FF3C2142" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ControlGradientMainHighlight" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FF9140F2" Offset="0"/>
        <GradientStop Color="#FFCA1EFD" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>